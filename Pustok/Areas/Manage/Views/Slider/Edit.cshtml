@model Pustok.Models.Slider

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input asp-for="Id" type="hidden" />
    
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" placeholder="Enter Title name">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" placeholder="Enter Description" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ButtonText">Button Text</label>
        <input asp-for="ButtonText" class="form-control" placeholder="Enter Button Text">
        <span asp-validation-for="ButtonText" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ButtonUrl">Button URL</label>
        <input asp-for="ButtonUrl" class="form-control" placeholder="Enter Button URL">
        <span asp-validation-for="ButtonUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Order">Order</label>
        <input asp-for="Order" type="number" class="form-control" placeholder="Enter Order">
        <span asp-validation-for="Order" class="text-danger"></span>
    </div>
    
    @if (!string.IsNullOrEmpty(Model.Image))
    {
        <div class="form-group">
            <label>Current Image</label>
            <div>
                <img src="~/image/products/@Model.Image" alt="Current Image" style="max-width: 200px; height: auto;" />
            </div>
        </div>
    }
    
    <div class="form-group">
        <label for="ImageFile">New Image (optional)</label>
        <input type="file" name="ImageFile" class="form-control" accept="image/*">
        <small class="form-text text-muted">Leave empty to keep current image</small>
    </div>

    <button type="submit" class="btn btn-primary">Update Slider</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>